{
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/github": "^7.1.1",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "commitizen": "^4.2.1",
    "cz-customizable": "^6.3.0",
    "docsify-cli": "^4.4.3",
    "husky": "^7.0.0",
    "lint-staged": ">=10",
    "prettier": "2.3.2",
    "semantic-release": "^17.4.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "lint-staged": {
    "modules/**": "tools/bulk.sh pre-commit modules --add-to-commit",
    "templates/**": "tools/bulk.sh pre-commit templates",
    "**/*.json": "prettier --write --ignore-unknown --parser json",
    "**/*.(yaml|yml)": "prettier --write --ignore-unknown --parser yaml",
    "**/*.md": "prettier --config --write --ignore-unknown --parser markdown",
    "**/*.tf": "terraform fmt -write"
  },
  "scripts": {
    "brew": "if command -v brew &> /dev/null; then brew bundle; fi",
    "go": "if command -v go &> /dev/null; then go get gotest.tools/gotestsum; fi",
    "format": "tools/bulk.sh format modules --parallel",
    "lint": "yarn lint:modules & yarn lint:templates",
    "lint:modules": "tools/bulk.sh lint modules --parallel",
    "lint:templates": "tools/bulk.sh lint templates --parallel",
    "postinstall": "yarn brew && yarn go",
    "prepare": "husky install .config/husky",
    "test": "tools/bulk.sh test modules --parallel",
    "test:integration": "tools/bulk.sh test integration modules --parallel",
    "test:unit": "tools/bulk.sh test unit modules --parallel"
  }
}
